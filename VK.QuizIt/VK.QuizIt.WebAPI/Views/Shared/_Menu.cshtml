
@{
    var loggedIn = User.Identity.IsAuthenticated;
}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" asp-area="" asp-controller="PersonFinder" asp-action="Search">QuizIt</a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link text-dark" asp-area="" asp-controller="PersonFinder" asp-action="CSharp">CSharp</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="PersonFinder" asp-action="Add">MSSQL</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="PersonFinder" asp-action="Profile">JavaScript</a>
                </li>

                @if (loggedIn)
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Identity" asp-action="SignOut">Sign Out</a>
                    </li>
                    <li class="nav-item">
                        <label>Hello @User.Identity.Name</label>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Identity" asp-action="SignUp">Sign Up</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Identity" asp-action="SignIn">Sign In</a>
                    </li>
                }

            </ul>
        </div>
    </div>
</nav>