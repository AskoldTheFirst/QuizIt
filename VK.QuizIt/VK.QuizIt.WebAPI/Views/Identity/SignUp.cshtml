@model SignUpViewModel

@{
    ViewData["Title"] = "SignUp";
}

    <form asp-controller="Identity" asp-action="SignUp" mathod="post">

        @Html.ValidationSummary()

        <div class="form-group col-5">
            <label class="col-5 text-dark" asp-for="Email">Email:</label>
            <input type="text" asp-for="Email" />
        </div>

        <div class="form-group col-5">
            <label class="col-5 text-dark" asp-for="Password">Password:</label>
            <input type="text" asp-for="Password" />
        </div>

        <div class="form-group col-5">
            <label class="invisible col-5"></label>
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </div>

        
    </form>

<div class="alert alert-info">
    If you already have an account, please <a asp-action="SignIn">Sign In</a>
</div>